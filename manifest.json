{
    "manifest_version": 2,
    "name": "Amazon Order History Reporter",
    "description": "This extension extracts order history from your Amazon account.",
    "version": "1.8.7",
    "permissions": [
        "https://smile.amazon.ca/",
        "https://www.amazon.ca/",
        "https://smile.amazon.com/",
        "https://www.amazon.com/",
        "https://smile.amazon.co.uk/",
        "https://www.amazon.co.uk/",
        "https://www.amazon.de/",
        "https://www.amazon.fr/",
        "https://www.amazon.in/",
        "https://smile.amazon.it/",
        "https://www.amazon.it/"
    ],
    "background": {
        "scripts": [
            "order_db.js"
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://smile.amazon.ca/*",
                "https://www.amazon.ca/*",
                "https://smile.amazon.com/*",
                "https://www.amazon.com/*",
                "https://smile.amazon.co.uk/*",
                "https://www.amazon.co.uk/*",
                "https://www.amazon.de/*",
                "https://www.amazon.fr/*",
                "https://www.amazon.in/*",
                "https://smile.amazon.it/*",
                "https://www.amazon.it/*"
            ],
            "css": ["datatables.css"],
            "js": [
                "datatables.js",
                "sprintf.js",
                "util.js",
                "request_scheduler.js",
                "csv.js",
                "order.js",
                "table.js",
                "inject.js"
            ]
        }
    ],
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
